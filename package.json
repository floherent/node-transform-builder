{
  "name": "node-transform-builder",
  "version": "1.0.0-dev.1",
  "description": "A tool to build node transform documents for Coherent Spark",
  "author": "Coherent (https://coherent.global)",
  "license": "Apache-2.0",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@cspark/sdk": ">=0.4.0",
    "@rollup/plugin-typescript": "^12.1.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.4",
    "dotenv": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "jsonata": "1.8.7",
    "prettier": "3.5.3",
    "rollup": "^4.44.1",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 120
  },
  "jest": {
    "testRegex": ".*\\.test\\.ts$",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "scripts": {
    "example": "tsx src/handler.example.ts",
    "prebuild": "node scripts/lint-jsonata.js",
    "build": "rollup -c",
    "postbuild": "node scripts/create-transforms.js",
    "deploy": "node scripts/publish-transforms.js",
    "format": "prettier --write src scripts",
    "test": "jest",
    "test:e2e": "TRANSFORM_NAME=sample jest --config src/fixtures/jest-e2e.json",
    "prepare": "husky"
  }
}
